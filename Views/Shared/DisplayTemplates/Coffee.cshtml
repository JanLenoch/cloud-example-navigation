@model Coffee

<div class="col-md-6 col-lg-4">
    <article class="product-tile">
        <h4>@Html.DisplayFor(vm => vm.System.Name)</h4>
        <figure class="product-tile-image">@Html.AssetImage(Model.Image.FirstOrDefault(), width: 452, height: 452)</figure>
        <div class="product-tile-info">
            <span class="product-tile-price">$@Html.DisplayFor(vm => vm.Price)</span>
        </div>
    </article>
</div>